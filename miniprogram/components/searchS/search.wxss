/* components/search/search.wxss */
@import '../../style/iconfont/iconfont.wxss';
.container{
  width: 100%;
  height:90rpx;
  overflow: hidden;
}
.container-s{
  height: 90vh;
  background-color: #fff;
}
.search{
  display: flex;
  align-items: center;
  margin: 20rpx;
}
.search-text{
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 10rpx;
  color: #666;
  border-radius: 20rpx;
}
.border{
  border: 1rpx solid #aaa;
}
.quxiao{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #ccc;
  text-align: center;
  color: #fff;
  height: 35rpx;
  width: 35rpx;
  line-height:35rpx;
  border-radius: 50%;
}
.search-cancel{
  padding: 10rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  color: #576B95;
}
.icon-search{
  margin-right: 20rpx;
}
.ipt{
  width: 80%;
}
.search-history{
  display: flex;
  margin: 20rpx;
  justify-content:space-between;
}
.search-history-btn{
  margin: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.search-history-btn .text{
  border: 1rpx solid #aaa;
  border-radius: 50rpx;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  margin: 10rpx;
}
.no-user{
  text-align: center;
}
.userPhoto{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}









