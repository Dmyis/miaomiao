/* miniprogram/pages/user/childPages/editUserInfo/editUserInfo.wxss */

page {
  overflow: hidden;
}

.edit-photo {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.photoBox {
  position: relative;
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 30rpx #666
}
.loging{
width: 35rpx;
height: 35rpx;
}

.edit-photo image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
}

.edit-photo text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 60rpx;
  text-align: center;
  color: rgba(255, 255, 255, .5);
  font-weight: 700;
  background-color: rgba(0, 0, 0, .3);
}
.edit-userInfo-item {
  padding: 25rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.remind{
  color: red;
  font-size: 20rpx;
}
.userInfo-content{
  color: #777;
}

.editRegion{
  color: #999;
}
.edit-model {
  width: 100%;
  height: 100vh;
  position: absolute;
  bottom: -100%;
  transition: .3s;
  background-color: #f1f1f1;
}

.show-edit-model {
  bottom: 0;
}

.edit-model-head {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}

.edit-model-head .center {
  font-weight: 600;
}

.edit-model-head .exit {
  color: #777;
}
.age{
  color: #888;
}
.edit-model-head .fix {
  margin: 0;
}

.edit-model-ipt {
  padding: 20rpx;
  background-color: #fff;
}

.edit-model-ipt input {
  font-size: 30rpx;
}